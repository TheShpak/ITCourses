@model IEnumerable<ServiceStationAdministration.Models.Car>
 
<h3 class="text-center col-lg-offset-3 col-lg-6">Cars list</h3>
<table class="table">
    <tr>        
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vin)
            </td>
            <td>
                @Html.ActionLink("Orders list", "Details", "Car", new { id = item.CarID }, null) |
                @Html.ActionLink("Edit", "Edit", "Car", new { id = item.CarID }, null) |
                @Html.ActionLink("Delete", "Delete", "Car", new { id = item.CarID }, null) |
                @Html.ActionLink("Add an order", "Create", "Order", new { carID = item.CarID }, null)
            </td>
        </tr>
        
    }

</table>